    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es5",
    "lib": [ "es2015", "es2016" ],
    "skipLibCheck": true,
    "module": "amd",
    "jsx": "react",
